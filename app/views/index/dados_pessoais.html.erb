<% content_for :js do %>
    <%= javascript_include_tag 'editar_assinatura' %>
<% end %>
<div class="clearfix">
  <h1 class="page-title">
    Dados Pessoais
    <div class="pull-right">
      <%= link_to 'Voltar', root_path, class: 'btn btn-default btn-lg' %>
    </div>
  </h1>
  <div class="separator"></div>
  <%= simple_form_for(@active_user, url: dados_pessoais_path, method: :post) do |f| %>
      <div class="alert alert-danger alert-dismissable">
        <h4><%= pluralize(@active_user.errors.count, 'erro impediu', 'erros impediram') %> que os dados fossem
          salvos.</h4>

        <ul>
          <% @active_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <div class="col col-md-4 col-xs-12">

        <%= f.input :nome %>
        <%= f.input :email %>
        <%= f.input :senha, as: :password %>
        <%= f.input :senha_confirmation, as: :password, label: 'Confirmação de senha' %>
      </div>
      <div class="col col-md-8 col-xs-12">
        <%= f.input :assinatura, wrapper_html: {class: 'col col-xs-12'} %>
      </div>
      <div class="col col-md-12 col-xs-12" style="margin-top: 15px">
        <%= f.button :submit, 'Salvar', class: 'btn btn-lg btn-block btn-primary' %>
      </div>
  <% end %>
</div>
