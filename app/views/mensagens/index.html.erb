<h1 class="page-title">
  Mensagens da campanha
  <br>
  <small>Campanha <%= @campanha.nome %></small>
  <%= link_to 'Nova', new_campanha_mensagem_path(@campanha), class: 'btn btn-primary btn-lg pull-right' %>
  <%= link_to 'Voltar', campanhas_path, class: 'btn btn-default btn-lg pull-right', style: 'margin-right: 5px' %>
</h1>
<div class="separator"></div>
<div class="clearfix">
  <div class="col col-lg-4 col-md-6 col-xs-12">
    <p>
      <%= @campanha.descricao %>
    </p>
  </div>
  <div class="col col-lg-8 col-md-6 col-xs-12">
    <table class="table table-hover table-striped data-table">
      <thead>
      <tr>
        <th>Enviada</th>
        <th>Envio</th>
        <th width="1" class="text-center">
          <i class="fa fa-cogs"></i>
        </th>
      </tr>
      </thead>

      <tbody>
      <% @mensagens.each do |mensagem| %>
          <tr>
            <td><%= mensagem.enviada ? 'Sim' : 'NÃ£o' %></td>
            <td><%= mensagem.envio.strftime '%d/%m/%Y Ã s %H:%M' %></td>
            <td width="1" class="text-center" style="white-space: nowrap">
              <%= link_to 'Visualizar', campanha_mensagem_path(@campanha, mensagem), class: 'btn btn-xs btn-default' %>
              <%= link_to 'Editar', edit_campanha_mensagem_path(@campanha, mensagem), class: 'btn btn-xs btn-primary' %>
              <%= link_to 'Excluir', campanha_mensagem_path(@campanha, mensagem),
                          class: 'btn btn-xs btn-danger',
                          method: :delete,
                          data: {confirm: 'Deseja realmente excluir esta mensagem?'}
              %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>