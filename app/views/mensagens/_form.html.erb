<%= simple_form_for [@campanha, @mensagem] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :envio, as: :string, input_html: {class: 'date-time-picker'} %>
    <%= f.input :texto, input_html: {class: 'summernote'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
