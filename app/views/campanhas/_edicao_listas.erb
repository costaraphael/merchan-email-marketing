<% content_for :js do %>
    <%= javascript_include_tag 'editar_listas' %>
<% end %>
<%= simple_form_for :add_lista, url: add_lista_campanha_path(campanha), method: :post, remote: true do |f| %>
    <div class="row">
      <div class="col-xs-8">
        <%= f.input :lista_select2 %>
        <%= f.input_field :lista_id, as: :hidden %>
      </div>
      <div class="col-xs-4">
        <%= f.button :submit, 'Adicionar', class: 'btn btn-sm btn-primary btn-block' %>
      </div>
    </div>
<% end %>
<div class="separator" style="margin: 15px -15px !important"></div>
<%= content_tag_for :div, campanha, class: 'listas-campanha' do %>
    <%= render partial: 'listagem_listas', locals: {campanha: campanha} %>
<% end %>