<h1 class="page-title">
  Listas
  <%= link_to 'Nova', new_campanha_path, class: 'btn btn-primary btn-lg pull-right' %>
</h1>
<div class="separator"></div>
<table class="table table-hover table-striped data-table">
  <thead>
  <tr>
    <th>Nome</th>
    <th width="1" class="text-center">
      <i class="fa fa-cogs"></i>
    </th>
  </tr>
  </thead>

  <tbody>
  <% @campanhas.each do |campanha| %>
      <tr>
        <td><%= campanha.nome %></td>
        <td width="1" class="text-center" style="white-space: nowrap">
          <%= link_to 'Mensagens', campanha_mensagens_path(campanha), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Editar', edit_campanha_path(campanha), class: 'btn btn-xs btn-primary' %>
          <%= link_to 'Excluir', campanha,
                      class: 'btn btn-xs btn-danger',
                      method: :delete,
                      data: {confirm: 'Deseja realmente excluir esta campanha?'}
          %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
